{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@contexts": ["src/contexts"],
      "@contexts/*": ["src/contexts/*"],
      "@app": ["src/app"],
      "@app/*": ["src/app/*"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@navigation": ["src/navigation"],
      "@navigation/*": ["src/navigation/*"]
    }
  }
}
